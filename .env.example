# Core APIs
# Get your Grok API key from https://x.ai
GROK_API_KEY=your_grok_api_key_here

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/sentiment_db
# Direct connection for migrations (same as DATABASE_URL for local development)
DIRECT_URL=postgresql://user:password@localhost:5432/sentiment_db

# Vercel Cron Security
# Generate a random secret: openssl rand -base64 32
CRON_SECRET=your_random_cron_secret_here

# Optional: Supabase Configuration
# If using Supabase instead of local PostgreSQL
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your_supabase_anon_key

# Environment
NODE_ENV=development

# Analytics (Optional)
# Google Analytics ID for tracking
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX